{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Presentation Definition Format",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^jwt$|^jwt_vc$|^jwt_vp$": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "alg": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    },
    "^ldp_vc$|^ldp_vp$|^ldp$": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "proof_type": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    }
  }
}
